.container
	.row
		.page-header
			h1 #{title}
			small 重度科幻迷
.navbar.navbar-default.navbar-fixed-bottom
	.container
		.navbar-header
			a.navbar-brand(href='/') 重度科幻迷
		p.navbar-text.navbar-right
			a.navbar-link(href='#', data-toggle='modal', data-target='#signinModal') 登录
			span  | 
			a.navbar-link(href='#', data-toggle='modal', data-target='#signupModal') 注册
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form.form-horizontal(method='post', action='/user/') 
				.form-group.text-center 
					h2 注册
				hr
				.form-group
					label.col-sm-2.control-label(for='singnupName') 用户名
					.col-sm-9
						input#singnupName.form-control(name='user[name]', type='text',placeholder='*用户名由6-20位数字字母组成')
				.form-group
					label.col-sm-2.control-label(for='singnupPassword') 密码
					.col-sm-9
						input#singnupPassword.form-control(name='user[password]', type='password')
				.form-group
					label.col-sm-2.control-label(for='singnupPassword') 确认密码
					.col-sm-9
						input#singnupPassword.form-control(type='password',placeholder='确认上次密码')
				.form-group.text-center
					span.col-sm-2
					button.btn.btn-default.col-sm-3(type='button') 取消
					span.col-sm-2
					button.btn.btn-success.col-sm-3(type='submit') 注册

